{
  "name": "IoTSmartMobile",
  "version": "1.0.0",
  "main": "node_modules/expo/AppEntry.js",
  "scripts": {
    "start": "expo start",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "web": "expo start --web",
    "build:android": "eas build --platform android",
    "build:ios": "eas build --platform ios",
    "submit:android": "eas submit --platform android",
    "submit:ios": "eas submit --platform ios",
    "test": "jest",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "expo": "~49.0.0",
    "expo-status-bar": "~1.6.0",
    "expo-constants": "~14.4.2",
    "expo-device": "~5.4.0",
    "expo-notifications": "~0.20.1",
    "expo-secure-store": "~12.3.1",
    "expo-location": "~16.1.0",
    "expo-camera": "~13.4.2",
    "expo-av": "~13.4.1",
    "expo-network": "~5.4.0",
    "react": "18.2.0",
    "react-native": "0.72.3",
    "react-native-screens": "~3.22.0",
    "react-native-safe-area-context": "4.6.3",
    "react-native-gesture-handler": "~2.12.0",
    "react-native-reanimated": "~3.3.0",
    "@react-navigation/native": "^6.1.7",
    "@react-navigation/stack": "^6.3.17",
    "@react-navigation/bottom-tabs": "^6.5.8",
    "@react-navigation/drawer": "^6.6.3",
    "react-native-vector-icons": "^10.0.0",
    "react-native-paper": "^5.9.1",
    "react-native-chart-kit": "^6.12.0",
    "react-native-svg": "13.9.0",
    "react-native-maps": "1.7.1",
    "react-native-modal": "^13.0.1",
    "react-native-swipe-gestures": "^1.0.5",
    "react-native-orientation-locker": "^1.5.0",
    "react-native-image-picker": "^5.6.0",
    "react-native-qrcode-scanner": "^1.5.5",
    "socket.io-client": "^4.7.2",
    "axios": "^1.4.0",
    "moment": "^2.29.4",
    "react-hook-form": "^7.45.2",
    "zustand": "^4.4.1",
    "react-query": "^3.39.3",
    "react-native-mmkv": "^2.10.1",
    "react-native-haptic-feedback": "^2.2.0",
    "react-native-sound": "^0.11.2",
    "react-native-biometrics": "^3.0.1",
    "react-native-keychain": "^8.1.3",
    "@react-native-async-storage/async-storage": "1.18.2",
    "react-native-background-job": "^1.0.13",
    "react-native-push-notification": "^8.1.1"
  },
  "devDependencies": {
    "@babel/core": "^7.20.0",
    "@types/react": "~18.2.14",
    "@types/react-native": "~0.72.2",
    "@typescript-eslint/eslint-plugin": "^6.2.1",
    "@typescript-eslint/parser": "^6.2.1",
    "eslint": "^8.45.0",
    "eslint-config-expo": "^7.0.0",
    "eslint-plugin-react": "^7.33.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest": "^29.2.1",
    "jest-expo": "~49.0.0",
    "typescript": "^5.1.3"
  },
  "jest": {
    "preset": "jest-expo"
  },
  "private": true,
  "expo": {
    "name": "IoT Smart System",
    "slug": "iot-smart-system",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.iotsmartsystem.app",
      "buildNumber": "1",
      "infoPlist": {
        "NSCameraUsageDescription": "This app uses camera to scan QR codes for device setup",
        "NSLocationWhenInUseUsageDescription": "This app uses location to show device positions on map",
        "NSMicrophoneUsageDescription": "This app uses microphone for voice commands"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#FFFFFF"
      },
      "package": "com.iotsmartsystem.app",
      "versionCode": 1,
      "permissions": [
        "CAMERA",
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "RECORD_AUDIO",
        "VIBRATE",
        "RECEIVE_BOOT_COMPLETED",
        "WAKE_LOCK"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-notifications",
      [
        "expo-camera",
        {
          "cameraPermission": "Allow app to access camera for QR scanning"
        }
      ],
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow app to access location for device mapping"
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "your-project-id"
      }
    }
  }
}
